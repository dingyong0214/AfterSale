	/* button start*/

	.dl-btn {
		width: 100%;
		position: relative;
		border: 0 !important;
		border-radius: 10rpx;
		padding-left: 0;
		padding-right: 0;
		overflow: visible;
	}

	.dl-btn::after {
		content: "";
		position: absolute;
		width: 200%;
		height: 200%;
		-webkit-transform-origin: 0 0;
		transform-origin: 0 0;
		-webkit-transform: scale(0.5, 0.5);
		transform: scale(0.5, 0.5);
		box-sizing: border-box;
		left: 0;
		top: 0;
		border-radius: 20rpx;
		border: 0;
	}

	.dl-btn-white::after {
		border: 1rpx solid #BFBFBF;
	}

	.dl-white-hover {
		background: #e5e5e5 !important;
		color: #2e2e2e !important;
	}

	.dl-dark-disabled {
		opacity: 0.6 !important;
		color: #fafbfc !important;
	}

	.dl-dark-disabled.dl-btn-danger {
		opacity: 1 !important;
		background: #FC8888 !important;
	}

	.dl-outline-hover {
		opacity: 0.5;
	}

	.dl-primary-hover {
		background: #126f93 !important;
		color: #e5e5e5 !important;
	}

	.dl-primary-outline::after {
		border: 1rpx solid #1582AD !important;
	}

	.dl-primary-outline {
		color: #1582AD !important;
		background: none;
	}

	.dl-danger-hover {
